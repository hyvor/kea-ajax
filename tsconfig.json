{
    "compilerOptions": {
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "ES5",
        "module": "CommonJS",
        "strict": true,
        "sourceMap": true,
        "outDir": "./lib",
        "baseUrl": "./src",
        "incremental": true,
        "types": ["jest", "node"],
        "lib": ["dom", "es2017"],
        "resolveJsonModule": false,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "jsx": "react",
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "lib", "tests"]
}